# Server Configuration
PORT=3000
WS_PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nutrina
DATABASE_URL=mongodb://localhost:27017/nutrina

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# TTS Provider Configuration (google or elevenlabs)
TTS_PROVIDER=google

# Google Cloud TTS Configuration
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
# Prefer using one of the two options below so credentials stay outside git
GOOGLE_APPLICATION_CREDENTIALS_FILE=/absolute/path/to/your-service-account.json
GOOGLE_APPLICATION_CREDENTIALS_BASE64=base64_encoded_credentials_here
# Optional legacy inline JSON (only for throwaway local testing, do not commit):
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_TTS_VOICE_NAME=en-US-Chirp3-HD-Aoede
GOOGLE_TTS_LANGUAGE_CODE=en-US
GOOGLE_TTS_AUDIO_ENCODING=MP3
GOOGLE_TTS_USE_SSML=false  # Set to false for Chirp voices (they don't support SSML)

# Legacy ElevenLabs Configuration (for backward compatibility)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Performance Configuration
ENABLE_PERFORMANCE_MODE=true

# AI Service Configuration
AI_PROVIDER=gemini
GEMINI_MODEL=gemini-1.5-flash
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=120
AI_TEMPERATURE=0.4
CONVERSATION_HISTORY_LIMIT=4
ENABLE_AI_CACHING=true
AI_TIMEOUT=8000

# OpenAI Realtime API Configuration
OPENAI_REALTIME_ENABLED=false
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2025-06-03
OPENAI_REALTIME_BASE_URL=https://api.openai.com/v1/realtime
OPENAI_REALTIME_VOICE=verse

# Audio Service Configuration
TTS_MODEL=eleven_monolingual_v1
TTS_OUTPUT_FORMAT=mp3_44100_32
STT_TIMEOUT=3000
TTS_TIMEOUT=2000
ENABLE_PARALLEL_PROCESSING=true

# Security
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=info